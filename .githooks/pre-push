#!/usr/bin/env bash
set -euo pipefail
if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File tools/prepush.ps1
elif command -v powershell >/dev/null 2>&1; then
  powershell -NoLogo -NoProfile -ExecutionPolicy Bypass -File tools/prepush.ps1
else
  echo "No PowerShell found. Run: powershell -File tools/prepush.ps1" >&2
  exit 1
fi